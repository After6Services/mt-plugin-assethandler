<mt:setvar name="page_title" value="<__trans phrase="Manage Assets">">
<mt:setvarblock name="html_head" append="1">
  <style type="text/css">
    .file_name { width: 300px; overflow: hidden; }
    .detail { width: 800px; }
    .vars { width: 500px; }
    .vars input[type="text"],
    .vars textarea { width: 95%; }
    .plugin-actions { display: none; }
    #asset-listing-table .status-missing {
      background: url("<mt:var name="static_uri">images/status_icons/warning.gif") no-repeat scroll left center transparent;
      margin-left: 5px;
      padding-left: 10px;
    }
  </style>
</mt:setvarblock>
<mt:include name="include/header.tmpl" id="header_include">
<mt:setvarblock name="save_button_title"><__trans phrase="Save these [_1] (s)" params="<mt:var name="object_label_plural" lower_case="1">"></mt:setvarblock>
<mt:setvarblock name="action_buttons">
  <button
   mt:command="submit"
   mt:mode="save_assets"
   type="submit"
   accesskey="s"
   title="<$mt:var name="save_button_title"$>"
   class="save action primary button mt-submit-items">
  <__trans phrase="Save">
  </button>
</mt:setvarblock>
<mtapp:listing>
<mt:if __first__>
  <thead>
    <tr>
      <th class="col head file_name"><span class="col-label"><__trans phrase="File"></span></th>
      <th class="col head detail" colspan="2"><span class="col-label"><__trans phrase="Details"></span></th>
    </tr>
  </thead>
  <tbody>
</mt:if>
    <tr id="asset-<mt:var name="id">" class="<mt:if name="__odd__">odd<mt:else>even</mt:if>">
      <td class="col file_name">
        <input type="hidden" name="id" value="<mt:var name="id">" id="id" />
        <input type="hidden" id="asset-<mt:var name="id">-json" value="<mt:var name="metadata_json" escape="html">" />
  <mt:unless name="file_is_missing">
        <img src="<$mt:var name="thumbnail_url"$>" />
  <mt:else>
        <$mt:var name="file_label" escape="html" default="$file_name"$><span class="status-missing">(<__trans phrase="Asset Missing">)</span>
  </mt:unless>
        <div id="asset-<mt:var name="id">-preview" class="asset-preview">
          <div id="asset-<mt:var name="id">-preview-inner" class="asset-preview-inner"></div>
        </div>
      </td>
      <td class="col vars">
        <div>
          <mtapp:setting
           id="file_name"
           label_class="top-label"
           label="<__trans phrase="Name">">
            <div class="textarea-wrapper">
              <input type="text" name="label_<mt:var name="id">" value="<$mt:var name="file_label" escape="html" default="$file_name"$>" class="text full full-width" />
            </div>
          </mtapp:setting>
          <mtapp:setting
           id="tags"
           label_class="top-label"
           label="<__trans phrase="Tags">">
            <div class="textarea-wrapper">
              <input type="text" name="tags_<mt:var name="id">" value="<mt:var name="tags" escape="html">" class="text full full-width" />
            </div>
          </mtapp:setting>
        </div>
        <div>
          <mtapp:setting
           id="description"
           label_class="top-label"
           label="<__trans phrase="Description">">
            <textarea name="description_<mt:var name="id">" id="description_<mt:var name="id">" class="full-width" rows="4"><mt:var name="description"></textarea>
          </mtapp:setting>
        </div>
      </td>
      <td class="col statics">
          <mtapp:setting
           id="file_name"
           label_class="top-label"
           label="<__trans phrase="Name">">
            <div class="textarea-wrapper">
              <input type="text" name="label_<mt:var name="id">" value="<$mt:var name="file_label" escape="html" default="$file_name"$>" class="text" />
            </div>
          </mtapp:setting>
      </td>
    </tr>
<mt:if __last__>
  </tbody>
</mt:if>
</mtapp:listing>
<mt:setvarblock name="jq_js_include" append="1">
  jQuery('button.mt-submit-items').mtSubmitItems({
    id: '<$mt:var name="object_type"$>-listing-form'
  });
</mt:setvarblock>
<mt:include name="include/footer.tmpl">